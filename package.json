{
  "name": "sail-er-map",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "portable": "node scripts/portable.js",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.hm64.sailermap",
    "productName": "Sail ER Map",
    "artifactName": "${productName}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "index.html",
      "styles.css",
      "app.js",
      "package.json"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "portable",
        "zip"
      ]
    }
  }
}
